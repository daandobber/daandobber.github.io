---
const { quests } = Astro.props;
---

<section class="mb-6 rounded-md border-2 border-stone-800 p-4 dark:border-white">
	<h2 class="mb-3 text-center text-xl font-bold tracking-wider uppercase">Quest Log</h2>
	<table class="w-full border-collapse">
		<tbody>
			{
				quests.map((q) => (
					<tr class="border-b border-stone-700 last:border-0">
						<td class="px-2 py-1 align-top text-sm">{q.period}</td>
						<td class="px-2 py-1 align-top">
							<div class="font-semibold">{q.title}</div>
							<div class="text-sm">{q.description}</div>
						</td>
					</tr>
				))
			}
		</tbody>
	</table>
</section>
