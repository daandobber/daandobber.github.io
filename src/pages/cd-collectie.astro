---
import PageLayout from "@/layouts/Base.astro";
import CdCollection from "@/components/CdCollection.astro";

const meta = {
  title: "Mijn CD-collectie",
  description: "Overzicht van mijn cd's gebaseerd op Discogs-data",
};

// Laad de JSON-data lokaal in:
import cdData from '../data/cd_collection.json';
const collectionData = cdData.releases || [];
---

<PageLayout meta={meta}>
  <h1 class="title mb-6">Mijn CD-collectie</h1>
  <CdCollection collectionData={collectionData} client:load />
</PageLayout>
